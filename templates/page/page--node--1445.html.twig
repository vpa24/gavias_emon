</div>

<script>

var path = window.location.search;
var currentLang = "0";
if (path.indexOf('mlg=1') >= 0) {
    currentLang = "1";
}
else if (path.indexOf('mlg=2') >= 0)  {
    currentLang = "2";
}
else if (path.indexOf('mlg=3') >= 0) {
    currentLang = "3";
}

function changeLanguage(select) {
    var selectedLang = select.options[select.selectedIndex].value;
    if (window.location.href.indexOf('mlg=') >= 0)  {
        //replace
        window.location.href = window.location.href.replace("mlg=" + currentLang, "mlg=" + selectedLang);
    } else {
        // append
        if (window.location.href.indexOf('?') >= 0) 
            window.location.href = window.location.href + "&mlg=" + selectedLang;
        else
            window.location.href = window.location.href + "?mlg=" + selectedLang;
    }
}


var readyHandler = function() {
    if (window.jQuery) {  
        clearInterval(timer0);
        jQuery(document).ready(function () {
            jQuery("#lang_dropdown_select option[value='" + currentLang + "']").prop('selected', true);
            jQuery("#lang_dropdown_select option[value='" + currentLang + "']").attr('selected', 'selected');
        });
    }
}
var timer0 = setInterval(readyHandler, 500);

</script>





