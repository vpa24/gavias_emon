
<div class="column-inner bg-size-cover white-bg " style="padding: 20px 30px" >
  <div style="font-size:12px; color: #103a71">{{ fields.field_resource_type.content|upper }}</div>

    <div style="float: right; padding-left: 5px; padding-bottom: 0px">
      {% if fields.field_image_file.content is not empty %}
          <img class="resource-thumbnail" src="{{ fields.field_image_file.content }}">
      {% elseif fields.field_image.content is not empty %}            
          <img class="resource-thumbnail" src="{{ fields.field_image.content }}">
      {% endif %}
    </div>
    <h3 class="team-name">{{ fields.title.content }}</h3>
    
    <div class="team-info">
      {{ fields.body.content }}
      {% if fields.field_resource_type.content == 'Video' %}
        <div class="image video-thumbnail" style="text-align:center;">
          {{ fields.field_youtube_video.content }}
        </div>
      {% else %}
        <a href="{{ fields.field_link.content }}" target="smci" class="smaller semibold colorbox-iframe" >     
            <div class="readmore">Read this {{ fields.field_resource_type.content|lower }} <i class="fa fa-angle-right"></i></div>
        </a>
      {% endif %}
    </div>
</div>
