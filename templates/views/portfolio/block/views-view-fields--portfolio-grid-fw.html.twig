<article class="portfolio-v1 col-lg-3 col-md-3 col-sm-6 col-xs-12 isotope-item no-padding {{ fields.tid.content|lower|striptags|trim }} grid ">      
   <div class="portfolio-content">
      <div class="portfolio-image image text-center">  
            {{ fields.field_image.content }}
      </div>  
      <div class="content">
         <div class="content-inner">
            <div class="title"> 
               {{ fields.title.content }}
            </div>  
            <div class="category">
               {{ fields.field_portfolio_tags.content }}
            </div>  
         </div>    
      </div>
   </div>
</article>