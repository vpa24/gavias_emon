<div class="item">
<article class="testimonial-v1">      
   <div class="testimonial-content row">
      <div class="content col-md-6 col-sm-12 col-xs-12">
         <div class="content-inner">
            <div class="quote">
               " {{ fields.body.content|striptags }} "
            </div>  
            <div class="avatar"> 
               {{ fields.field_testimonial_avatar.content }}
            </div> 
            <div class="title"> 
               {{ fields.field_testimonial_name.content }}
            </div>  
             <div class="job"> 
               {{ fields.field_testimonial_job.content }}
            </div>
         </div>    
      </div>
      <div class="testimonial-image image text-center col-md-6 col-sm-12 col-xs-12">  
         {% if iframe_video %}
            {{ iframe_video|raw }}
         {% else %}      
            {{ fields.field_image.content }}
         {% endif %}   
      </div>  
   </div>
</article>
</div>