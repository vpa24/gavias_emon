<div class="banner-slider gavias-slider">
   {% for row in rows %}
      {{ row.content }}
   {% endfor %}
</div>

<script type="text/javascript">
   jQuery(document).ready(function(){
      jQuery('.banner-slider').slick({
         dots: true,
         infinite: true,
         arrows: true,
         prevArrow: '<a class="slick-prev"><i class="fa fa-angle-left"></i></a>',
         nextArrow: '<a class="slick-next"><i class="fa fa-angle-right"></i></a>',  
         slidesToShow: 4,
         slidesToScroll: 1,
         autoplay: true,
         autoplaySpeed: 2000,
         pauseOnHover: true,
         speed: 300,
         lazyLoad: 'ondemand',

         responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 3,
              infinite: true,
              dots: true
            }
          },
          {
            breakpoint: 600,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 2
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }
          // You can unslick at a given breakpoint now by adding:
          // settings: "unslick"
          // instead of a settings object
         ]
      });

      /*
      // On lazyLoaded
      jQuery('.banner-slider').on('init', function(event, slick, direction){
         //jQuery('.banner-slider div').css("background-color", "white");
         console.log("init");
         $('.banner-slider').slick('slickPlay');
      });
      */
   });
</script>